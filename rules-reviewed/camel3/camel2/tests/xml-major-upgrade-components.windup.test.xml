<?xml version="1.0"?>
<ruletest id="xml-major-upgrade-components-tests"
          xmlns="http://windup.jboss.org/schema/jboss-ruleset"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/xml-major-upgrade-components</testDataPath>
    <rulePath>../xml-major-upgrade-components.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="xml-major-upgrade-components-00000-test">
                <when>
                    <not>
                        <iterable-filter size="1">
                            <hint-exists message="The default FHIR specification*"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[xml-major-upgrade-components] 'camel-fhir' dependency upgrade hint was not found!" />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
