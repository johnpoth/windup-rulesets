<?xml version="1.0"?>
<ruletest id="removed-endpoint-options-tests"
          xmlns="http://windup.jboss.org/schema/jboss-ruleset"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/removed-endpoint-options</testDataPath>
    <rulePath>../removed-endpoint-options.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="removed-endpoint-options-00000-test">
                <when>
                    <not>
                        <iterable-filter size="4">
                            <hint-exists message="The `org.apache.camel:camel-kafka` component has removed the options `bridgeEndpoint` and `circularEndpointDetection`"/>
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="[removed-endpoint-options] 'camel-kafka' hint was not found!" />
                </perform>
            </rule>
        </rules>
    </ruleset>
</ruletest>
